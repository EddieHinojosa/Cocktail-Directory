<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-4 col-sm-6">
      <div class="drink-card">
        <div class="card-body">
          {{#each drinks}}
            <h5 class="card-title">{{drink_name}}</h5>
            <p class="card-text">Spirit Type: {{spirit_type}}</p>
            <p class="card-text">Spirit Amount: {{spirit_amount}}</p>
            <p class="card-text">Ingredients: {{ingredients}}</p>
            <p class="card-text">Instructions: {{instructions}}</p>
          {{else}}
            <p>No drinks found</p>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>