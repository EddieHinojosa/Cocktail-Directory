<div class="container">
  <div class="row">
    {{#each drinks}}
      <div class="col-lg-3 col-md-4 col-sm-6 mb-4 d-flex">
        <div class="card drink-card">
          <div class="card-body">
            <a href="/drink-details?id={{drink_id}}&name={{drink_name}}&spirit={{spirit_type}}&amount={{spirit_amount}}&ingredients={{ingredients}}&instructions={{instructions}}" class="image-link">
              <img src="{{image_link}}" class="card-img-top" alt="The Cocktail of Choice">
              <div class="overlay">
                <div class="overlay-text">
                  <h6>{{drink_name}}</h6>
                  <p>Rating: ⭐⭐⭐⭐⭐</p>
                </div>
              </div>
            </a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>
